<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Toolbar -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorOnPrimary">@color/primary</item>
    </style>

    <!-- Circle Button -->
    <style name="Widget.App.CircleButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeCut</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircleButton</item>
    </style>

    <style name="ShapeCut" parent="ShapeAppearanceOverlay">
        <item name="cornerSize">100%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ThemeOverlay.App.CircleButton" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
    </style>

    <!-- Button -->
    <style name="Widget.App.CircleButtonInvert" parent="Widget.App.CircleButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircleButtonInvert</item>
    </style>

    <style name="ThemeOverlay.App.CircleButtonInvert" parent="">
        <item name="colorPrimary">@color/onPrimary</item>
        <item name="colorOnPrimary">@color/primary</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/onPrimary</item>
        <item name="colorOnPrimary">@color/primary</item>
    </style>

    <!-- Search Input -->
    <style name="Widget.App.TextInputLayout.Search" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="startIconDrawable">@drawable/ic_baseline_search_24</item>
    </style>

    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="backgroundTintMode">screen</item>
        <item name="backgroundTint">#EEEEEF</item>
    </style>

</resources>